doctype html
html(lang="en")
    head
        title #{title}
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 Update Custom Object
        p
            a(href="/") Return to the homepage
        .form-wrapper
            p Create new Pet record
            form(method="POST")
                label(for="name") Name
                input(type="text" name="name" required)
                label(for="type") Type
                input(type="text" name="type" required)
                label(for="food") Food
                input(type="text" name="food" required)
                input(type="submit" value="Submit")